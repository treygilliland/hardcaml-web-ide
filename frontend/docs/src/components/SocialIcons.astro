<style>
  .social-icons {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .ide-button {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 1rem;
    background: var(--sl-color-accent);
    color: var(--sl-color-white);
    font-size: 0.875rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 0.375rem;
    transition: background 0.15s ease;
  }

  .ide-button:hover {
    background: var(--sl-color-accent-high);
    text-decoration: none;
  }

  .github-link {
    color: var(--sl-color-gray-2);
    padding: 0.5rem;
    transition: color 0.15s ease;
  }

  .github-link:hover {
    color: var(--sl-color-white);
  }
</style>
